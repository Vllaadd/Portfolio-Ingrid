<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact</title>
</head>

<body>
    {{>main}}
    <div class="contact-container">
        <div class="contact-title">let's chat</div>
        <form class="contact-form" id="contact-form" action="/contact" method="POST">
            <div class="contact-label">Your Name (required)</div>
            <input type="text" id="fullname" name="fullname" placeholder="Your name...">
            <div class="contact-label">Your Email (required)</div>
            <input type="text" id="email" name="email" placeholder="Your email...">
            <div class="contact-label">Subject</div>
            <input type="text" id="subject" name="subject" placeholder="Subject...">
            <div class="contact-label">Subject</div>
            <textarea rows="5" id="note" name="note" placeholder="Your note..."></textarea>
            <input type="submit" value="Submit">
        </form>
        <div id="contact-thankyou">Good to be in touch! I'll get back to you shortly.</div>
        <div id="submitted">{submitted} </div>
    </div>
    {{>footer}}
    <script>
        console.log(document.getElementById("submitted").innerHTML);
        const submitted = document.getElementById("submitted").innerHTML;
        if(submitted == "yes"){
            const contactForm = document.getElementById("contact-form");
            const contactThanks = document.getElementById("contact-thankyou");
            contactForm.style.display = "none";
            contactThanks.style.display = "block";
        }
    </script>
</body>

</html>